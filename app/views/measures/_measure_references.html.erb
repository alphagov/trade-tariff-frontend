<% if measure.has_measure_conditions? %>
  <div class='conditions' id='<%= measure.id %>' data-popup='<%= measure.destination %>-<%= measure.id %>-conditions'>
  <article>
    <table class="small-table">
      <caption>
        <h2 class="heading-medium"><%= measure.measure_type.description %> for <%= measure.geographical_area.description %></h2>
      </caption>
      <thead>
        <tr>
          <th>Condition</th>
          <th>Document code</th>
          <th>Requirement</th>
          <th>Action</th>
          <th>Duty expression</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "measure_conditions/measure_condition", collection: measure.measure_conditions, locals: { measure: measure } %>
      </tbody>
    </table>
    <!-- <p><a href="#" class="help-link">What does this mean?</a></p> -->
  </article>
</div>
<% end %>

<% measure.footnotes.each do |footnote| %>
<div class='footnotes' id='<%= footnote.id %>' data-popup='<%= footnote.id %>'>
  <article>
    <table class="small-table">
      <caption>
        <h2 class="heading-medium">Footnote for measure</h2>
      </caption>
      <thead>
        <tr>
          <th>Code</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <%= render footnote %>
      </tbody>
    </table>
    <!-- <p><a href="#" class="help-link">What does this mean?</a></p> -->
  </article>
</div>
<% end %>

<% if measure.has_references? %>
<nav class="part-pagination return-to-top">
